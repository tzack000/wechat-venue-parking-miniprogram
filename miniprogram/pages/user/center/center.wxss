/* pages/user/center/center.wxss */

.container {
  padding-top: 0;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 60rpx 30rpx 80rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  margin-right: 30rpx;
}

.avatar-default {
  background-color: rgba(255, 255, 255, 0.3);
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.user-tag .tag {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

/* 未登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  color: var(--primary-color);
  font-size: 30rpx;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

.login-btn::after {
  border: none;
}

/* 菜单区域 */
.menu-section {
  margin: -40rpx 20rpx 20rpx;
  position: relative;
}

.menu-section:first-of-type {
  margin-top: -40rpx;
}

.menu-title {
  font-size: 26rpx;
  color: var(--text-hint);
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
  margin-bottom: 8rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-color);
}

.menu-arrow {
  color: var(--text-hint);
  font-size: 28rpx;
}
