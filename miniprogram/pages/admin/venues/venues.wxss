/* pages/admin/venues/venues.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 场馆列表 */
.venue-item {
  margin-bottom: 20rpx;
}

.venue-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.venue-name {
  font-size: 32rpx;
  font-weight: bold;
}

.venue-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.venue-status.enabled {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
}

.venue-status.disabled {
  background-color: rgba(153, 153, 153, 0.1);
  color: var(--text-hint);
}

.venue-info {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.venue-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-color);
}

.action-btn {
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}

.action-btn.edit {
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.action-btn.disable {
  color: var(--text-hint);
  border: 2rpx solid var(--border-color);
}

.action-btn.enable {
  color: var(--success-color);
  border: 2rpx solid var(--success-color);
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: var(--primary-color);
  color: var(--white);
  font-size: 32rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

/* 表单弹窗 */
.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.form-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.form-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--white);
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
}

.form-close {
  font-size: 48rpx;
  color: var(--text-hint);
  line-height: 1;
}

.form-body {
  padding: 20rpx 30rpx;
  flex: 1;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.required {
  color: var(--error-color);
  margin-right: 4rpx;
}

.form-input {
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

.picker-arrow {
  color: var(--text-hint);
}

.time-row {
  display: flex;
  align-items: center;
}

.time-picker {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

.time-separator {
  margin: 0 20rpx;
  color: var(--text-hint);
}

.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid var(--border-color);
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.btn-cancel,
.btn-save {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.btn-cancel {
  background-color: var(--bg-color);
  color: var(--text-secondary);
  margin-right: 20rpx;
}

.btn-save {
  background-color: var(--primary-color);
  color: var(--white);
}

/* 空状态 */
.empty-state {
  padding-top: 200rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}
