/* pages/venue/list/list.wxss */

.container {
  padding: 0;
}

/* 类型筛选 */
.type-filter {
  display: flex;
  white-space: nowrap;
  background-color: var(--white);
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid var(--border-color);
}

.type-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  background-color: var(--bg-color);
  border-radius: 30rpx;
}

.type-item.active {
  color: var(--white);
  background-color: var(--primary-color);
}

/* 场馆列表 */
.venue-list {
  padding: 20rpx;
}

.venue-item {
  display: flex;
  padding: 0;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.venue-image {
  width: 240rpx;
  height: 240rpx;
  flex-shrink: 0;
}

.venue-image image {
  width: 100%;
  height: 100%;
}

.venue-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.venue-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.venue-name {
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.venue-type {
  font-size: 22rpx;
  flex-shrink: 0;
}

.venue-location,
.venue-time {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.venue-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.venue-price {
  color: var(--error-color);
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
}

.price-unit {
  font-size: 22rpx;
  color: var(--text-hint);
}

.book-btn {
  padding: 10rpx 24rpx;
  background-color: var(--primary-color);
  color: var(--white);
  font-size: 24rpx;
  border-radius: 6rpx;
}

/* 加载更多 */
.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx;
  color: var(--text-hint);
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  padding-top: 200rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}
