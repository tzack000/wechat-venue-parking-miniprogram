/* pages/venue/booking/booking.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 140rpx;
}

.card {
  margin-bottom: 20rpx;
}

.info-title,
.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

/* 预约信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-value {
  font-size: 28rpx;
  color: var(--text-color);
}

.info-value.price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--error-color);
}

/* 表单 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.required {
  color: var(--error-color);
  margin-right: 4rpx;
}

.form-input {
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 提示 */
.tips-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

.tip-item {
  margin-bottom: 8rpx;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background-color: var(--white);
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.price-info {
  font-size: 28rpx;
}

.price-label {
  color: var(--text-secondary);
}

.price-total {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--error-color);
}

.submit-btn {
  padding: 20rpx 80rpx;
  background-color: var(--primary-color);
  color: var(--white);
  font-size: 30rpx;
  border-radius: 8rpx;
  border: none;
}

.submit-btn::after {
  border: none;
}
