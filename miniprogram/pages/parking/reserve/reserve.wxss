/* pages/parking/reserve/reserve.wxss */

.container {
  padding: 20rpx;
}

/* 车位状态 */
.parking-status {
  text-align: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.status-info {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.status-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
}

.status-value {
  font-size: 60rpx;
  font-weight: bold;
}

.status-unit {
  font-size: 28rpx;
  color: var(--text-hint);
  margin-left: 8rpx;
}

/* 预约表单 */
.reserve-form {
  margin-bottom: 20rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.required {
  color: var(--error-color);
  margin-right: 4rpx;
}

.form-input {
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

.plate-input {
  text-transform: uppercase;
  letter-spacing: 4rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
}

.picker-arrow {
  color: var(--text-hint);
}

.submit-btn {
  margin-top: 40rpx;
  background-color: var(--primary-color);
  color: var(--white);
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  border: none;
}

.submit-btn::after {
  border: none;
}

/* 提示 */
.tips {
  font-size: 26rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.tips-content {
  color: var(--text-secondary);
  line-height: 1.8;
}

.tip-item {
  margin-bottom: 8rpx;
}
